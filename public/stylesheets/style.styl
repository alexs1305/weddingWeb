@import 'nib'

main-color = #b39eb5
bakcol1 = #aa98a9
bakcol2 = #795678

back-color = color-grad(bakcol1, bakcol2)

color-grad(c1, c2)
  background-image -webkit-radial-gradient(center, c1, c2)
  background-image -moz-radial-gradient(center, c1, c2);
  background-image radial-gradient(center, c1, c2);

pad(n)
 padding n

body
  back-color
  text-align center
  color white
  min-height 700px
  font-family "Comic Sans MS", cursive, sans-sherif

.header
  text-align center 
  padding 10px auto 10px
 
.main-content
 min-height 300px
 min-width 500px
 margin 0 auto
 margin-bottom 10px


.container
  min-width 500px
  min-height 300px
  float left
  color-grad(#999999, alpha) 
  overflow hidden
  p
   margin-bottom 2px 
  max-width 1000px
 

.sidebar
  float left
  width 200px
  height 300px
  background-color main-color
  border-radius 2px

.widget     
  padding-right 0px
  ul
    &:hover
     color #cc00cc
     color-grad(#ff66cc, #ff66ff)
    a
     padding 10px 50px 10px
     display inline-block
    
.thumbs
 img
  height 100px
  width 100px
  margin 4px 
  border-radius 2px
  display inline-block
  image-rendering pixelated

.footer
 position absolute
 margin-top 10px
 width auto
 bottom 0px  